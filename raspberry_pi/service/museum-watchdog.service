[Unit]
Description=Museum System Watchdog
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
# Use virtual environment (uncomment if using venv)
# ExecStart=/home/admin/Documents/GitHub/museum-system/venv/bin/python /home/admin/Documents/GitHub/museum-system/raspberry_pi/watchdog.py

# Use global Python (uncomment if not using venv)
ExecStart=/usr/bin/python3 /home/admin/Documents/GitHub/museum-system/raspberry_pi/watchdog.py

WorkingDirectory=/home/admin/Documents/GitHub/museum-system/raspberry_pi
Restart=always
RestartSec=10
User=admin
Group=admin
Environment=PYTHONPATH=/home/admin/Documents/GitHub/museum-system/raspberry_pi
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target